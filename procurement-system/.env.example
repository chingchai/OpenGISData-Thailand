# Application
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:5173

# Database (SQLite for MVP)
DB_PATH=./server/data/database/procurement.db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=./server/logs/app.log

# Email (for future notification system)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@huatalay.go.th

# LINE Notify (for future notification system)
LINE_NOTIFY_TOKEN=your-line-notify-token

# File Upload (for future attachments)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./server/uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Cron Jobs (for future SLA monitoring)
ENABLE_CRON=false
SLA_CHECK_SCHEDULE=0 8 * * *

# Frontend
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=ระบบจัดการโครงการจัดซื้อจัดจ้าง
VITE_APP_VERSION=1.0.0-MVP
