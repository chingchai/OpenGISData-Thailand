# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:5173

# ===========================================
# Database Configuration (Choose one)
# ===========================================

# Option 1: SQLite (Default for Development/MVP)
DB_TYPE=sqlite
DB_PATH=./server/data/database/procurement.db

# Option 2: MariaDB/MySQL (Production)
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=procurement_system
# DB_USER=procurement_user
# DB_PASSWORD=your_secure_password
# DB_CHARSET=utf8mb4
# DB_TIMEZONE=+07:00

# Connection Pool Settings (for MySQL only)
# DB_POOL_MIN=2
# DB_POOL_MAX=10
# DB_POOL_IDLE=10000

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-long-random-string
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Security
# ===========================================
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this-to-random-string
CORS_ORIGIN=http://localhost:5173

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug
LOG_FILE=./server/logs/app.log
LOG_FORMAT=combined

# ===========================================
# File Upload Configuration
# ===========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./server/uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# ===========================================
# Email Configuration (Optional - for future)
# ===========================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@huatalay.go.th
SMTP_FROM_NAME=ระบบจัดการโครงการจัดซื้อจัดจ้าง

# ===========================================
# LINE Notify Configuration (Optional - for future)
# ===========================================
LINE_NOTIFY_ENABLED=false
LINE_NOTIFY_TOKEN=your-line-notify-token

# ===========================================
# Cron Jobs Configuration
# ===========================================
ENABLE_CRON=false
SLA_CHECK_SCHEDULE=0 8 * * *
NOTIFICATION_SCHEDULE=0 */4 * * *

# ===========================================
# Frontend Configuration (Vite)
# ===========================================
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=ระบบจัดการโครงการจัดซื้อจัดจ้าง
VITE_APP_VERSION=1.0.0-MVP
VITE_ENABLE_DEBUG=true

# ===========================================
# Production Settings
# ===========================================
# เมื่อ deploy production ให้เปลี่ยนค่าเหล่านี้:
# NODE_ENV=production
# DB_TYPE=mysql
# LOG_LEVEL=info
# ENABLE_CRON=true
# SMTP_ENABLED=true
# LINE_NOTIFY_ENABLED=true
# ===========================================
